root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.nix]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.{ts,js,tsx,jsx}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.{sh,bash}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
indent_style = tab
trim_trailing_whitespace = false

[*.{css,scss,less}]
indent_style = space
indent_size = 2

[*.{html,htm}]
indent_style = space
indent_size = 2

[*.{xml,svg}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4
